---
layout: feed
---
{% assign d = site.data.npw_2018 %}
<channel>
  <title>{{ d.title | xml_escape }}</title>
  <description>{{ d.description | xml_escape }}</description>
  <link>{{ site.url }}/2018</link>
  <atom:link href="{{ site.url }}/2018/feed.xml" rel="self" type="application/rss+xml" />
  {% for post in site.tags[d.filter_name] %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <description>{{ post.content | xml_escape }}</description>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <link>{{ site.url }}/{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}/{{ post.url }}</guid>
    </item>
  {% endfor %}
</channel>
